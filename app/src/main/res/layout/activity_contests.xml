<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContestsActivity"
    android:background="@color/cyan">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <TextView
        android:id="@+id/joinTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Join"
        android:textColor="@color/white"
        android:fontFamily="@font/aldo"
        android:textSize="90sp"
        android:layout_marginLeft="30dp"
        android:paddingTop="70dp"/>

    <TextView
        android:id="@+id/contest_to_earn_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="contest to earn more"
        android:textColor="@color/white"
        android:fontFamily="@font/aldo"
        android:textSize="25sp"
        android:layout_marginLeft="30dp"/>

    <EditText
        android:id="@+id/name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_person"
        android:drawablePadding="12dp"
        android:hint="My Name"
        android:inputType="textEmailAddress"
        android:fontFamily="@font/lato_light_italic"
        android:background="@drawable/custom_input"
        android:padding="15dp"/>

    <EditText
        android:id="@+id/email_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_email"
        android:drawablePadding="12dp"
        android:hint="My Email Adress"
        android:inputType="textEmailAddress"
        android:fontFamily="@font/lato_light_italic"
        android:background="@drawable/custom_input"
        android:padding="15dp"/>

    <Button
        android:visibility="gone"
        android:id="@+id/register_confirm_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_edit_text"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Confirm"
        android:textColor="@color/spoterfWhite"
        android:fontFamily="@font/aldo"
        android:background="@drawable/confirm_background"
        android:gravity="center_horizontal"
        android:padding="10dp"/>

            <TextView
                android:id="@+id/enter_contest_code"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="enter contest code here"
                android:gravity="center"
                android:fontFamily="@font/lato_light_italic"
                android:textSize="18sp"/>

            <LinearLayout
                android:id="@+id/register_confirm_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/register_confirm_button"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:orientation="horizontal">



                <EditText
                    android:id="@+id/contestCodeTxt"
                    android:inputType="text"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_input"
                    android:fontFamily="@font/aldo"
                    android:gravity="center"
                    android:hint="code"
                    android:textAlignment="gravity"
                    android:textSize="30dp" />
                <Button
                    android:id="@+id/checkContestCode"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/confirm_background"
                    android:fontFamily="@font/aldo"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:text="Confirm"
                    android:textColor="@color/spoterfWhite" />


            </LinearLayout>

            <TextView
                android:id="@+id/codeTxt"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/register_confirm_layout"
                android:gravity="center"
                android:textAllCaps="true"
                android:textColor="@color/spoterfWhite"
                android:text="NO CODE"
                android:lineSpacingExtra="1dp"
                android:fontFamily="@font/rubiks"
                android:textSize="25sp"/>

            <EditText
                android:id="@+id/parameter_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/custom_input"
                android:drawableLeft="@drawable/number_one_icon"
                android:drawablePadding="12dp"
                android:fontFamily="@font/lato_light_italic"
                android:hint="One of the Parameters"
                android:inputType="textEmailAddress"
                android:padding="15dp" />

            <EditText
                android:id="@+id/parameter_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/parameter_1"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/custom_input"
                android:drawableLeft="@drawable/number_two_icon"
                android:drawablePadding="12dp"
                android:fontFamily="@font/lato_light_italic"
                android:hint="One of the Parameters"
                android:inputType="textEmailAddress"
                android:padding="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/parameter_2"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/parameters_confirm_btn"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/confirm_background"
                    android:fontFamily="@font/aldo"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:text="Confirm"
                    android:textColor="@color/spoterfWhite" />

                <TextView
                    android:id="@+id/attemptsDisplay"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_input"
                    android:fontFamily="@font/aldo"
                    android:gravity="center"
                    android:text="0"
                    android:textAlignment="gravity"
                    android:textSize="30dp" />


            </LinearLayout>

        </LinearLayout>



    </ScrollView>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/winnerLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="5dp"
        android:paddingBottom="15dp"
        android:layout_marginBottom="120dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="80dp">

        <ImageView
            android:id="@+id/closeWinnerTab"
            android:layout_alignParentRight="true"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_leave"/>

        <TextView
            android:id="@+id/you_have_won"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You Have Won \nThis Contest"
            android:fontFamily="@font/great_vibes"
            android:gravity="center"
            android:textSize="40sp"
            android:layout_marginTop="15dp"
            android:textColor="@color/spoterfWhite"
            android:shadowColor="@color/spoterfWhite"
            android:shadowRadius="10"
            />

        <TextView
            android:background="@drawable/custom_input"
            android:padding="5dp"
            android:id="@+id/contest_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/you_have_won"
            android:text="Contest Name"
            android:textColor="@color/spoterfBlack"
            android:fontFamily="@font/lato_light_italic"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/winnerTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WINNER"
            android:textColor="@color/spoterfWhite"
            android:layout_below="@id/contest_name"
            android:gravity="center"
            android:textSize="40dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/aldo"/>

        <TextView
            android:id="@+id/winnerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="user full name"
            android:textColor="@color/spoterfWhite"
            android:layout_below="@id/winnerTxt"
            android:gravity="center"
            android:textSize="25dp"
            android:layout_marginTop="1dp"
            android:fontFamily="@font/great_vibes"/>
    </RelativeLayout>




</RelativeLayout>