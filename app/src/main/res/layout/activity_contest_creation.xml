<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContestCreationActivity"
    android:background="@color/spoterfBlack">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

    <TextView
        android:id="@+id/makeTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Make"
        android:textColor="@color/white"
        android:fontFamily="@font/aldo"
        android:textSize="90sp"
        android:layout_marginLeft="30dp"
        android:paddingTop="70dp"/>

    <TextView
        android:id="@+id/impactTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="an impact"
        android:textColor="@color/white"
        android:fontFamily="@font/aldo"
        android:textSize="25sp"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/makeTxt"
        android:layout_marginBottom="20dp"/>

            <EditText
                android:id="@+id/email_edit_text"
                android:layout_below="@id/impactTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:drawableLeft="@drawable/ic_email"
                android:background="@drawable/custom_input"
                android:drawablePadding="12dp"
                android:fontFamily="@font/lato_light_italic"
                android:hint="Email Address"
                android:inputType="textEmailAddress"
                android:padding="15dp" />

            <EditText
                android:layout_below="@id/impactTxt"
                android:id="@+id/password_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/architecture_icon"
                android:background="@drawable/custom_input"
                android:drawablePadding="12dp"
                android:fontFamily="@font/lato_light_italic"
                android:hint="Password"
                android:inputType="textEmailAddress"
                android:padding="15dp" />

            <EditText
                android:id="@+id/contestCode"
                android:layout_below="@id/impactTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_input"
                android:drawableLeft="@drawable/architecture_icon"
                android:drawablePadding="12dp"
                android:fontFamily="@font/lato_light_italic"
                android:hint="Contest Code"
                android:inputType="textEmailAddress"
                android:padding="15dp" />

    <EditText
        android:layout_below="@id/impactTxt"
        android:id="@+id/parameter_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        android:layout_marginTop="10dp"
        android:background="@drawable/custom_input"
        android:drawableLeft="@drawable/number_one_icon"
        android:drawablePadding="12dp"
        android:fontFamily="@font/lato_light_italic"
        android:hint="One of the Parameters"
        android:inputType="textEmailAddress"
        android:padding="15dp" />

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <EditText
                    android:id="@+id/parameter_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/custom_input"
                    android:drawableLeft="@drawable/number_two_icon"
                    android:drawablePadding="12dp"
                    android:fontFamily="@font/lato_light_italic"
                    android:hint="One of the Parameters"
                    android:inputType="textEmailAddress"
                    android:padding="15dp"/>

                <EditText
                    android:id="@+id/hardness"
                    android:textSize="16dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/custom_input"
                    android:drawableLeft="@drawable/bar_chart_icon"
                    android:drawablePadding="12dp"
                    android:fontFamily="@font/lato_light_italic"
                    android:hint="Hardness"
                    android:inputType="numberPassword"
                    android:padding="15dp"
                    android:gravity="center"/>

                </LinearLayout>



    <Button
        android:id="@+id/createContest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/parameter_2"
        android:text="Create Contest"
        android:textColor="@color/spoterfWhite"
        android:fontFamily="@font/aldo"
        android:background="@drawable/confirm_background"
        android:gravity="center_horizontal"
        android:padding="10dp"/>


            <Button
                android:id="@+id/generateCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Generate Code"
                android:textColor="@color/spoterfWhite"
                android:fontFamily="@font/aldo"
                android:background="@drawable/confirm_background"
                android:gravity="center_horizontal"
                android:padding="10dp"/>

    <TextView
        android:id="@+id/codeTxt"
        android:layout_below="@id/register_confirm_button"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAllCaps="true"
        android:textColor="@color/spoterfWhite"
        android:text="NO CODE"
        android:lineSpacingExtra="1dp"
        android:fontFamily="@font/rubiks"
        android:textSize="25sp"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>